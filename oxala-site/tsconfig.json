{
  "compilerOptions": {
    /* === Core Settings === */
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    /* === Strictness & Compatibility === */
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    /* === Paths & Aliases === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* === Deprecation Handling === */
    "ignoreDeprecations": "5.0",

    /* === Plugins === */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
